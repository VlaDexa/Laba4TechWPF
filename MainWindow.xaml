<Window x:Class="Laba4TechWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba4TechWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Input text -->
        <TextBox x:Name="InputText" TextWrapping="Wrap" Margin="10,10,10,10" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="300" />
        <TextBox x:Name="OutputText" TextWrapping="Wrap" Margin="10,10,10,10" HorizontalAlignment="Right" VerticalAlignment="Top" Width="300" Height="300" />
    </Grid>
</Window>
